<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="vertical">

        <TextView
            android:id="@+id/math_text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_weight="40"
            android:gravity="center_vertical|right"
            android:padding="5dp"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/result_text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_weight="60"
            android:gravity="center_vertical|right"
            android:padding="5dp"
            android:text="0"
            android:textColor="#666666"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/special_1_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="12"
                android:tag="!"
                android:text="!"
                android:textSize="18sp" />
            <Button
                android:id="@+id/special_2_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:tag="Rad"
                android:text="Rad"
                android:textSize="18sp" />
            <Button
                android:id="@+id/special_3_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:tag="Div"
                android:text="Div"
                android:textSize="18sp" />
            <Button
                android:id="@+id/left_pts_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:tag="("
                android:text="("
                android:textSize="18sp" />

            <Button
                android:id="@+id/right_pts_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:tag=")"
                android:text=")"
                android:textSize="18sp" />

            <Button
                android:id="@+id/percent_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:text="%"
                android:textSize="18sp" />

            <Button
                android:id="@+id/clear_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:backgroundTint="#929292"

                android:text="AC"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/special_4_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="12"
                android:tag="Sin"
                android:text="Sin"
                android:textSize="18sp" />
            <Button
                android:id="@+id/special_5_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:tag="Cos"
                android:text="Cos"
                android:textSize="18sp" />
            <Button
                android:id="@+id/special_6_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:tag="Tan"
                android:text="Tan"
                android:textSize="18sp" />
            <Button
                android:id="@+id/num_7_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:tag="7"
                android:text="7"
                android:textSize="18sp" />

            <Button
                android:id="@+id/num_8_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:tag="8"
                android:text="8"
                android:textSize="18sp" />

            <Button
                android:id="@+id/num_9_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:tag="9"
                android:text="9"
                android:textSize="18sp" />

            <Button
                android:id="@+id/divide_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:backgroundTint="#929292"
                android:tag="÷"
                android:text="÷"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/special_7_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="12"
                android:tag="In"
                android:text="In"
                android:textSize="18sp" />
            <Button
                android:id="@+id/special_8_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:tag="log"
                android:text="log"
                android:textSize="18sp" />
            <Button
                android:id="@+id/special_9_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:tag="1/x"
                android:text="1/x"
                android:textSize="18sp" />
            <Button
                android:id="@+id/num_4_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:tag="4"
                android:text="4"
                android:textSize="18sp" />

            <Button
                android:id="@+id/num_5_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:tag="5"
                android:text="5"
                android:textSize="18sp" />

            <Button
                android:id="@+id/num_6_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:tag="6"
                android:text="6"
                android:textSize="18sp" />

            <Button
                android:id="@+id/times_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:backgroundTint="#929292"
                android:tag="×"
                android:text="×"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:weightSum="100">
            <Button
                android:id="@+id/special_10_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="12"
                android:tag="ex"
                android:text="ex"
                android:textSize="18sp" />
            <Button
                android:id="@+id/special_11_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:tag="x2"
                android:text="x2"
                android:textSize="18sp" />
            <Button
                android:id="@+id/special_12_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:tag="xy"
                android:text="xy"
                android:textSize="18sp" />
            <Button
                android:id="@+id/num_1_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:tag="1"
                android:text="1"
                android:textSize="18sp"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/num_2_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:tag="2"
                android:text="2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/num_3_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:tag="3"
                android:text="3"
                android:textSize="18sp" />

            <Button
                android:id="@+id/minus_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:backgroundTint="#929292"
                android:tag="-"
                android:text="-"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/special_13_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="12"
                android:tag="(x)"
                android:text="(x)"
                android:textSize="18sp" />
            <Button
                android:id="@+id/special_14_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:tag="n"
                android:text="n"
                android:textSize="18sp" />
            <Button
                android:id="@+id/special_15_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:tag="e"
                android:text="e"
                android:textSize="18sp" />
            <Button
                android:id="@+id/num_0_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:tag="0"
                android:text="0"
                android:textSize="18sp" />

            <Button
                android:id="@+id/point_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:tag="."
                android:text="."
                android:textSize="18sp" />

            <Button
                android:id="@+id/equals_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:backgroundTint="#929292"
                android:tag="="
                android:text="="
                android:textSize="18sp" />

            <Button
                android:id="@+id/plus_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:backgroundTint="#929292"
                android:tag="＋"
                android:text="＋"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>